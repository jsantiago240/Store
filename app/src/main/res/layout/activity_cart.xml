<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="3dp">

        <ImageView
            android:id="@+id/imageBurger2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/burger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageFries2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/fries"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageSoda2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/imageFries"
            android:layout_alignStart="@+id/imageFries"
            android:layout_below="@+id/imageFries"
            android:src="@drawable/soda" />

    </LinearLayout>

    <TextView
        android:id="@+id/textDemo"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:text="Num Burgers:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>